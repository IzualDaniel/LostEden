<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kimageButton1"
        android:src="@drawable/k1"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="44dp"
        android:layout_marginTop="69dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kimageButton2"
        android:src="@drawable/k2"
        android:background="#000000"
        android:layout_alignTop="@+id/kimageButton1"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kimageButton3"
        android:src="@drawable/k3"
        android:background="#000000"
        android:layout_alignTop="@+id/kimageButton2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        />

</RelativeLayout>