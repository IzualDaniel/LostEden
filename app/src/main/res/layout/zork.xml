<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oimageButton1"
        android:src="@drawable/o1"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="44dp"
        android:layout_marginTop="69dp"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oimageButton2"
        android:src="@drawable/o2"
        android:background="#000000"
        android:layout_alignTop="@+id/oimageButton1"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oimageButton3"
        android:src="@drawable/o3"
        android:background="#000000"
        android:layout_alignTop="@+id/oimageButton2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oimageButton4"
        android:layout_marginTop="44dp"
        android:src="@drawable/o4"
        android:background="#000000"
        android:layout_below="@+id/oimageButton2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>